<h2>Projects:</h2>
<div class="row row-cols-3 mx-5 g-3">
    <% for(var i=0; i < projects.length; i++) {%>
        
    <div class="col">
      <div class="card w-75">
        <div class="card-body">
          <h5 class="card-title"><a href="/projects/<%= projects[i].projectName %>"><%= projects[i].projectName %></a></h5>
          <p class="card-text"><p><%= projects[i].projectDescription %></p><p>Amount of reviews: <%= reviewsCount[i] %></p></p>
        </div>
      </div>
    </div>
    <% } %>
